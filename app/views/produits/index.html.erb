<%= render 'pages/home' unless user_signed_in? %>

<div id="produits" class="transitions-enabled">
    <% @produits.each do |produit| %>
      <div class="box panel panel-default">    
        <%= link_to image_tag(produit.image.url(:medium)), produit %>
        <div class="panel-body"> 
          <%= produit.nom %><br/>
          <%= produit.description %><br/>
          <strong><%= produit.user.email if produit.user %> </strong>
          <% if produit.user == current_user %>
            <div class="actions">
            <%= link_to edit_produit_path(produit) do %>
             <span class="glyphicon glyphicon-edit"></span>
             Edit
            <% end %>
            <%= link_to produit, method: :delete, data: { confirm: 'Are you sure?' }  do %>
             <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
</div>



